<block>
  <service wx:if="{{ $service.messages }}">
    <view class="subtitle">
      <image src="/images/ic_notice.png" mode="aspectFit"/>
      <text>广播站</text>
      <space/>
    </view>
    <swiper wx:if="{{ $service.messages.length > 1 }}" autoplay="true" duration="300" circular="true">
      <swiper-item wx:for="{{ $service.messages }}" wx:key="*this" class="content {{ item.url ? 'selectable': '' }}"
                   catchtap="open"
                   data-url="{{ item.url }}">
        <image src="{{ item.image }}" wx:if="{{ item.image }}" mode="aspectFill"/>
        <view class="vertical">
          <text class="title" wx:if="{{ item.title }}">{{ item.title }}</text>
          <text>{{ item.content }}</text>
        </view>
      </swiper-item>
    </swiper>
    <view wx:if="{{ $service.messages.length == 1 }}" wx:for="{{ $service.messages }}" wx:key="*this"
          class="content {{ item.url ? 'selectable': '' }}" catchtap="open" data-url="{{ item.url }}">
      <image src="{{ item.image }}" wx:if="{{ item.image }}" mode="aspectFill"/>
      <view class="vertical">
        <text class="title" wx:if="{{ item.title }}">{{ item.title }}</text>
        <text>{{ item.content }}</text>
      </view>
    </view>
  </service>
  <service>
    <view class="subtitle">
        <image src="/images/ic_eyes.png" mode="aspectFit"/>
        <text>与机器人做好朋友，超酷的诶~</text>
        <space/>
    </view>
    <text class="content">{{ $avatar.name ? $avatar.name + '，' : '' }}欢迎使用小Q专属版小猴偷米，小猴偷米工作室联手小Q机器人，为你提供各类便捷查询服务。欢迎大家添加小Q机器人为QQ好友（3394289178），等你来撩( ˶ '▽' ˶ )~</text>
  </service>
</block>