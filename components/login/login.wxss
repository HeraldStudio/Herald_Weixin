subpage.login {
  display: flex;
  flex-direction: column;
  align-items: center;
}

subpage.login .logo {
  width: 180rpx;
  height: 180rpx;
  margin: 90rpx auto 20rpx;
}

subpage.login .slogan {
  font-size: 36rpx;
  color: #666;
  margin-bottom: 60rpx;
}

subpage.login input {
  width: 480rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 44rpx;
  padding: 15rpx 20rpx;
  background: #ffffff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

subpage.login button.login {
  width: 520rpx;
  text-align: center;
  border-radius: 10rpx;
  margin: 40rpx 0 20rpx;
}

subpage.login .copyright {
  font-size: 28rpx;
  color: #999;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 50rpx;
  text-align: center;
}