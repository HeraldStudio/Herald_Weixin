subpage.login {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
  padding-top: 40rpx;
  background: #fff;
}

subpage.login .logo {
  width: 180rpx;
  height: 180rpx;
  margin: 90rpx auto 20rpx;
  display: none;
}

subpage.login .slogan {
  font-size: 36rpx;
  color: #666;
  margin-bottom: 60rpx;
  display: none;
}

subpage.login input {
  width: 480rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 44rpx;
  padding: 15rpx 20rpx;
  background: #fafafa;
  border-radius: 10rpx;
  margin: 10rpx;
}

subpage.login .regex-hint {
  width: 480rpx;
  padding: 15rpx 20rpx;
  display: block;
  background: #f7efc4;
  border-radius: 10rpx;
  margin-bottom: -10rpx;
  font-size: 26rpx;
  color: #bc8d3e;
  position: relative;
}

subpage.login .regex-hint:after {
  content: " ";
  display: block;
  position: absolute;
  top: 100%;
  left: 50%;
  width: 0;
  height: 0;
  margin-left: -10rpx;
  border-top: 10rpx solid #f7efc4;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 10rpx solid transparent;
}

subpage.login button.login {
  width: 520rpx;
  text-align: center;
  border-radius: 10rpx;
  margin: 80rpx 0 20rpx;
}

subpage.login .copyright {
  font-size: 28rpx;
  color: #999;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 50rpx;
  text-align: center;
}