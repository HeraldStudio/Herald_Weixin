dashboard-title {
  display: block;
  padding: 30rpx 35rpx 30rpx 0;
  margin-left: 35rpx;
  font-size: 28rpx;
  color: #333;
  text-align: left;
}

dashboard {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  justify-content: stretch;
}

dashboard scroll-view {
  width: auto;
  margin: 0 10rpx;
  position: relative;
}

dashboard items {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

dashboard item {
  margin: 32rpx 0;
  padding: 5rpx 0;
  display: flex;
  position: relative;
  flex-direction: column;
  align-items: stretch;
  justify-content: center;
  text-align: center;
  background: transparent;
  border-left: 1rpx solid #f0f0f0;
  border-right: 1rpx solid #f0f0f0;
  border-top: 7rpx solid transparent;
  border-bottom: 7rpx solid transparent;
  margin-left: -1rpx;
  transition: .3s;
  -webkit-transition: .3s;
}

dashboard item:first-of-type {
  border-left: 1px solid transparent;
}

dashboard item:last-of-type {
  border-right: 1px solid transparent;
}

dashboard item expandable {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  transition: .3s;
  -webkit-transition: .3s;
}

dashboard items item.long {
  background: #fafafa;
  margin-top: 0;
  margin-bottom: 0;
  border-left: 1rpx solid transparent;
  border-right: 1rpx solid transparent;
  border-top: 7rpx solid #3688ff;
  border-bottom: 7rpx solid transparent;
  padding: 37rpx 0;
}

dashboard anchor {
  width: 0;
  height: 0;
  margin: 0;
  padding: 0;
  border: 0;
}

dashboard items item.long + item {
  border-left: 0 solid transparent;
  margin-left: 0;
}

dashboard item.expanded {
  width: 100%;
  display: block;
  background: #fafafa;
  margin: -1rpx 0 0 0;
  padding: 25rpx 0;
  border: none;
  position: relative;
  opacity: 1;
  transition: .3s;
  -webkit-transition: .3s;
}

dashboard item.expanded.hidden {
  max-height: 0;
  opacity: 0;
  padding: 0;
}

dashboard item blk {
  width: 145rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-grow: 1;
  transition: .3s;
  -webkit-transition: .3s;
}

dashboard item.expanded blk {
  border-left: 1rpx solid #f0f0f0;
}

dashboard item.expanded blk:first-child {
  border-left: none;
}

dashboard item list {
  display: none;
}

dashboard item.expanded long {
  display: flex;
  border-color: #f8f8f8;
}

dashboard item.expanded list {
  display: block;
}

dashboard item .desc {
  color: #666;
  font-size: 28rpx;
  transition: .3s;
  -webkit-transition: .3s;
}

dashboard item .info {
  color: #3688ff;
  font-size: 36rpx;
  padding-top: 10rpx;
  transition: .3s;
  -webkit-transition: .3s;
}

dashboard item .navigate {
  color: #3688ff;
  font-size: 32rpx;
  transition: .3s;
  -webkit-transition: .3s;
}

dashboard item .intro {
  color: #999;
  font-size: 24rpx;
  padding-top: 10rpx;
  height: 40rpx;
  overflow: hidden;
  transition: .3s;
  -webkit-transition: .3s;
  display: none;
}

