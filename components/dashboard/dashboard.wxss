dashboard item.expanded .intro {
  padding-top: 0;
  height: 0;
  opacity: 0;
}

dashboard item .hint {
  display: block;
  color: #666;
  font-size: 28rpx;
  padding: 30rpx 0;
  height: 40rpx;
  overflow: hidden;
  transition: .3s;
  -webkit-transition: .3s;
}

dashboard item .declaration {
  display: block;
  color: #666;
  font-size: 28rpx;
  margin: 0 15rpx;
  padding: 20rpx 15rpx;
  border-top: 1rpx solid #f0f0f0;
  text-align: left;
  overflow: hidden;
  transition: .3s;
  -webkit-transition: .3s;
}

dashboard item.long:active:before {
  bottom: -13rpx;
}

dashboard item list {
  margin-top: 10rpx;
  padding-top: 15rpx;
}

dashboard item list button.loading {
  background: none;
}

dashboard item list button.loading:before,
dashboard item list button.loading:after {
  border: none;
}

dashboard item list > view {
  margin: 0 15rpx;
  padding: 20rpx 25rpx;
  border-top: 1rpx solid #f0f0f0;
}

dashboard item list .line {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: stretch;
}

dashboard item list .top-left,
dashboard item list .bottom-left {
  flex-grow: 1;
  text-align: left;
}

dashboard item list .top-left {
  font-size: 32rpx;
  color: #3688ff;
}

dashboard item list .top-right,
dashboard item list .bottom-left {
  font-size: 28rpx;
  color: #666;
}

dashboard item list .bottom-right {
  font-size: 28rpx;
  color: #999;
}

dashboard item list .collapse {
  font-size: 28rpx;
  color: #999;
}

dashboard item list .selectable:active {
  background: rgba(0, 0, 0, .05);
  transition: .3s;
  -webkit-transition: .3s;
}