jwc {
  display: flex;
  flex-direction: row;
  align-items: center;
  background: #fcfcfc;
  padding: 5rpx 35rpx;
  max-height: 100rpx;
  -webkit-transition: .3s;
}

jwc.all {
  max-height: initial;
  align-items: flex-start;
  padding: 30rpx 35rpx;
}

jwc.all .vertical {
  display: flex;
  flex-direction: column;
}

jwc.all .content {
  margin: 10rpx;
}

jwc.all .content:before {
  content: ' ';
  display: inline-block;
  width: 10rpx;
  height: 10rpx;
  background: #3688ff;
  border-radius: 5rpx;
  vertical-align: middle;
  margin-top: -5rpx;
  margin-right: 15rpx;
}

jwc .icon {
  width: 42rpx;
  height: 42rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}

jwc.all .icon {
  margin-top: 10rpx;
}

jwc swiper {
  width: 100%;
  height: 90rpx;
  padding: 0;
}

jwc swiper-item {
  display: flex;
  align-items: center;
}

jwc .content {
  display: block;
  line-height: 40rpx;
  box-sizing: border-box;
  text-align: left;
  vertical-align: middle;
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
}

jwc .content.important {
  font-weight: bold;
}

jwc.selectable:active .subtitle {
  background: #f0f0f0;
}

jwc.selectable:active .content {
  background: #f0f0f0;
}

jwc .hint {
  display: block;
  line-height: 40rpx;
  box-sizing: border-box;
  text-align: left;
  vertical-align: middle;
  font-size: 28rpx;
  padding-top: 20rpx;
  color: #999;
  overflow: hidden;
}