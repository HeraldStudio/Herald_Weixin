.avatar-container {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  padding: 10rpx;
  margin: 25rpx;
  border-radius: 10rpx;
  box-shadow: 0 5rpx 30rpx rgba(0, 0, 0, .1);
  -webkit-transition: .5s;
  overflow: hidden;
}

.avatar-container .avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 30rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, .1)
}

.avatar-container .name {
  display: block;
  font-size: 34rpx;
  color: #333;
  margin-top: 5rpx;
}

.avatar-container .divider {
  width: 100%;
  height: 1rpx;
  margin: 20rpx 0;
  background: #f0f0f0;
}

.avatar-container .identity {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-top: 5rpx;
}

.avatar-container .detail {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  max-height: 300rpx;
  -webkit-transition: .5s;
}

.avatar-container .detail.hidden {
  max-height: 0;
  opacity: 0;
}

.right-container {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  text-align: left;
  margin: 30rpx 0;
}

.avatar-container .icon {
  width: 48rpx;
  height: 48rpx;
  margin: 56rpx 30rpx;
}