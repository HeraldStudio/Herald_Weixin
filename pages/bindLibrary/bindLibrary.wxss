page>view {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 0;
}

p {
  display: block;
  width: 480rpx;
  padding: 15rpx 20rpx;
  font-size: 26rpx;
  color: #666;
}

inline-text {
  display: inline;
}

a {
  display: inline;
  color: #d61518;
}

a:active {
  background: #f0f0f0;
}

input {
  width: 480rpx;
  text-align: center;
  font-size: 28rpx;
  line-height: 44rpx;
  padding: 15rpx 20rpx;
  background: #fafafa;
  border-radius: 10rpx;
  margin: 10rpx;
}

button.submit {
  width: 520rpx;
  text-align: center;
  border-radius: 10rpx;
  margin: 40rpx 0 20rpx;
}