.subtitle {
    padding: 15rpx 30rpx;
    background: #f4f4f4;
    text-align: left;
    color: #666;
    font-size: 28rpx;
}

item {
    margin: 0 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    position: relative;
}

item .schedule-avatar {
    background: #f4f4f4;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    flex-shrink: 0;
    /*box-shadow: inset 0 8rpx 15rpx rgba(0, 0, 0, .2);*/
}

item .schedule-avatar.dot {
    width: 20rpx;
    height: 20rpx;
    margin: 10rpx;
    -webkit-transition: .3s;
}

item .schedule-desc {
    margin-left: 25rpx;
    flex-grow: 1;
    padding: 25rpx 0;
}

item .line {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: stretch;
    margin: 5rpx 0;
}

item .going-on:before {
    content: "进行中 ";
    color: #f2800d;
}

item .top-line {
    margin-top: 5rpx;
    margin-bottom: 5rpx;
}

item .top-left,
item .bottom-left {
    flex-grow: 1;
    flex-shrink: 1;
    text-align: left;
}

item .top-left {
    font-size: 32rpx;
    color: #333;
}

item .top-right,
item .bottom-left {
    font-size: 26rpx;
    color: #666;
}

item .top-right,
item .bottom-right {
    flex-shrink: 0;
}

item .bottom-right {
    font-size: 26rpx;
    color: #999;
}

form input {
    padding: 20rpx 30rpx 20rpx 0;
    margin-left: 30rpx;
    border-bottom: 1rpx solid #eee;
    text-align: left;
    font-size: 30rpx;
    -webkit-transition: .3s;
}

form radio {
    color: #666;
    font-size: 27rpx;
    margin: 30rpx 10rpx;
}

.picker-container {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 30rpx;
    font-size: 30rpx;
    color: #00abd4;
}

.picker-container .picker {
    padding: 10rpx 15rpx;
    background: #00abd4;
    color: #ffffff;
    border-radius: 6rpx;
    -webkit-transition: .3s;
}

.picker-container .picker:active {
    background: #008dad;
}

.footer {
    padding: 20rpx 30rpx 20rpx 0;
    margin-left: 30rpx;
    text-align: left;
    color: #aaa;
    border-top: 1rpx solid #eee;
    font-size: 26rpx;
}