.markdown-body {
    font-size: 28rpx;
    color: #666;
    line-height: 1.5;
    word-wrap: break-word;
    padding: 30rpx;
    text-align: left;
}

.markdown-body .a {
    color:#3688ff !important;
    text-decoration: none;
}

.markdown-body .a:active {
    background: #f0f0f0;
}

.markdown-body .block {
    margin: 30rpx 30rpx;
}

.markdown-body .hr {
    height: 0;
    border-top: 1rpx solid #f0f0f0;
}

.markdown-body .blockquote_p {
    padding: 0 1em;
    color: #666;
    border-left: 0.25em solid #f5f5f5;
    margin-left: 0;
    margin-right: 0;
    margin-bottom: 1em;
}

.markdown-body .blockquote_p + .blockquote_p,
.markdown-body .code + .code {
    margin-top: -1em;
    padding-top: 1em;
}

.markdown-body .h1 {
    padding: 30rpx 0 20rpx;
    font-size: 40rpx;
    color: #333;
    border-bottom: 1rpx solid #f0f0f0;
    font-weight: bold;
}

.markdown-body .h2 {
    padding: 30rpx 0 20rpx;
    font-size: 34rpx;
    color: #333;
    font-weight: bold;
}

.markdown-body .h3 {
    padding: 30rpx 0 20rpx;
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
}

.markdown-body .h4 {
    padding: 30rpx 0;
    font-size: 30rpx;
    color: #333;
    font-weight: bold;
}

.markdown-body .h5 {
    padding: 30rpx 0;
    font-size: 28rpx;
    color: #333;
    font-weight: bold;
}

.markdown-body .h6 {
    padding: 30rpx 0;
    font-size: 28rpx;
    color: #333;
}

.markdown-body .h1:first-child,
.markdown-body .h2:first-child,
.markdown-body .h3:first-child,
.markdown-body .h4:first-child,
.markdown-body .h5:first-child,
.markdown-body .h6:first-child {
    margin-top: 0;
}

.markdown-body .ul_li_p::before{
    content:'• ';
}

.markdown-body .ul_li_ul_li_p::before,
.markdown-body .ol_li_ul_li_p::before{
    content:'◦ ';
}

.markdown-body .ul_li_ul_li_p,
.markdown-body .ul_li_ol_li_p,
.markdown-body .ol_li_ul_li_p,
.markdown-body .ol_li_ol_li_p{
    padding-left: 1em;
}

.markdown-body .ul_li_p:last{
    margin-bottom:1em;
}

.markdown-body .tr {
    display: flex;
    border-right:1px solid #e0e0e0;
    border-bottom:1px solid #e0e0e0;
    margin-top: 0;
    margin-bottom: 0;
}

.markdown-body .th,
.markdown-body .td{
    flex:1;
    padding:5px;
    font-size:28rpx;
    border-left:1px solid #e0e0e0;
    word-break: break-all;
}

.markdown-body .td:last{
    border-top:1px solid #e0e0e0;
}

.markdown-body .th{
    background:#f0f0f0;
    border-top:1px solid #e0e0e0;
}

.markdown-body .img {
    max-width: 100%;
    width: auto;
    height: auto;
    display: block;
    box-sizing: border-box;
    background-color:#fafafa;
    margin-top: 1em;
    margin-bottom: 1em;
}

.markdown-body .img:first-child {
  margin-top: 0;
}

.markdown-body .img:last-child {
  margin-bottom: 0;
}

.markdown-body .code,.markdown-body .tt {
    font: 95% "Source Code Pro", Consolas, "Liberation Mono", Menlo, Courier, monospace, "PingFang SC", "Microsoft YaHei UI";
    padding: 0;
    padding-top: 0.1em;
    padding-bottom: 0.1em;
    margin-top: 0;
    margin-bottom: 0;
    background-color: #f8f8f8;
    border-radius: 6rpx;
}

.markdown-body .code.block {
    padding:0 1em;
}

.markdown-body .code::before,.markdown-body .code::after,.markdown-body .tt::before,.markdown-body .tt::after {
    letter-spacing:-0.2em;
    content:"\00a0"
}

.markdown-body .code .br,.markdown-body .tt .br {
    display:none
}

.markdown-body .deleted {
    text-decoration: line-through;
    border-radius: 6rpx;
}

.markdown-body .strong {
    font-weight: bold;
}

.markdown-body .em {
  font-weight: 600;
}

.markdown-body .deleted .code {
    text-decoration:inherit;
    margin: 0;
    background:none
}
