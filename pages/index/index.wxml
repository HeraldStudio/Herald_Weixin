<block wx:if="{{ !$service }}">
    <include src="/templates/comp_loading.wxml"/>
</block>
<block wx:elif="{{ $service.serverHealth === true }}">
    <block wx:if="{{ $login.isLogin === true }}">
        <include src="/templates/comp_menu_tip.wxml"/>
        <include src="/templates/comp_avatar.wxml"/>
        <include src="/templates/comp_dashboard.wxml"/>
        <include src="/templates/comp_jwc.wxml"/>
        <include src="/templates/comp_service.wxml"/>
        <include src="/templates/comp_schedule.wxml"/>
        <contact-button type="default-light"/>
    </block>
    <block wx:elif="{{ $login.isLogin === false }}">
        <include src="/templates/comp_login.wxml"/>
    </block>
</block>
<block wx:else>
    <block wx:if="{{ $login.isLogin === true }}">
        <include src="/templates/comp_menu_tip.wxml"/>
        <include src="/templates/comp_server_down.wxml"/>
        <include src="/templates/comp_service.wxml"/>
        <include src="/templates/comp_schedule.wxml"/>
        <contact-button type="default-light"/>
    </block>
    <block wx:elif="{{ $login.isLogin === false }}">
        <include src="/templates/comp_server_down.wxml"/>
    </block>
</block>