.wifi {
    font-size: 28rpx;
    padding: 30rpx 10rpx;
    margin: 0 40rpx;
    border-bottom: 1rpx solid #eee;
}

.operation {
    display: flex;
    flex-direction: row;
    overflow: visible;
}

.operation > button {
    flex: 1 1 0;
    margin: 45rpx;
}