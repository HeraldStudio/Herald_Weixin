button {
    margin: 50rpx 200rpx;
    padding: 20rpx 30rpx;
    font-size: 32rpx;
    height: auto;
    line-height: normal;
}

.edit {
    padding: 15rpx 10rpx;
    margin: 10rpx 40rpx;
    font-size: 32rpx;
    border-bottom: 1px solid #000; 
}

.input-placeholder {
    color: #ccc;
}

.map {
    width: 750rpx;
    height: 750rpx;
    position: relative;
}

.map button {
    position: absolute;
    top: 320rpx;
    left: 240rpx;
    right: 240rpx;
    margin: 0;
}

.map image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: contain;
}

.flag {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    margin-top: -40rpx;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 1024 1024' xmlns='http://www.w3.org/2000/svg' width='32' height='32'%3E%3Cdefs%3E%3Cstyle/%3E%3C/defs%3E%3Cpath d='M132.55 63.053h71.632v81.803s266.814 51.811 597.378-35.895c-35.86 32.496-159.438 181.896-159.438 181.896L890.72 529.681H204.182v430.812H132.55V63.053z' fill='%2308f'/%3E%3C/svg%3E");
    background-size: contain;
    background-repeat: no-repeat;
    z-index: 101;
    pointer-events: none;
    transition: 1s;
}

.sample-flag {
    position: absolute;
    width: 8rpx;
    height: 8rpx;
    margin-top: -4rpx;
    margin-left: -4rpx;
    background: #08f;
    border-radius: 50%;
    z-index: 100;
    pointer-events: none;
    transition: 1s;
}

