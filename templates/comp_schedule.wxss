.subtitle {
    padding: 15rpx 30rpx;
    background: #f7f7f7;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    position: sticky;
    top: 0;
    z-index: 999;
}

.subtitle image {
    width: 32rpx;
    height: 32rpx;
}

.subtitle text {
    margin-left: 20rpx;
    font-size: 26rpx;
    color: #666;
}

schedule item {
    margin: 0 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    position: relative;
}

schedule item .schedule-avatar {
    background: #f2f2f2;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    flex-shrink: 0;
    box-shadow: inset 0 8rpx 15rpx rgba(0, 0, 0, .2);
}

schedule item .schedule-avatar.dot {
    width: 40rpx;
    height: 40rpx;
    margin: 20rpx;
}

schedule item .schedule-desc {
    margin-left: 25rpx;
    flex-grow: 1;
    padding: 25rpx 0;
    border-bottom: 1rpx solid #e3e3e3;
}

schedule item .line {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: stretch;
}

schedule item .top-line {
    margin-bottom: 5rpx;
    opacity: .5;
}

schedule item .top-left,
schedule item .bottom-left {
    flex-grow: 1;
    text-align: left;
}

schedule item .top-left {
    font-size: 32rpx;
    color: #333;
}

schedule item .top-right,
schedule item .bottom-left {
    font-size: 26rpx;
    color: #666;
}

schedule item .bottom-right {
    font-size: 26rpx;
    color: #999;
}
