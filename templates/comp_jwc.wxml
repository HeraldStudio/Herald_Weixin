<jwc wx:if="{{ $jwc.length }}" class="{{ $jwc_showAll ? 'all' : '' }}" catchtap="$jwc_toggleShowAll">
    <image class="icon" src="/images/ic_jwc.png" mode="aspectFit"/>
    <swiper wx:if="{{ !$jwc_showAll }}" autoplay="true" duration="300" circular="true" vertical="true">
        <swiper-item wx:for="{{ $jwc }}" catchtap="go" data-to="jwcDetail" data-url="{{ item.href }}" data-filename="{{ item.title }}">
            <text class="content">{{ item.title }}</text>
        </swiper-item>
    </swiper>
    <view class="vertical" wx:if="{{ $jwc_showAll }}">
        <view wx:for="{{ $jwc }}">
            <text class="content" catchtap="go" data-to="jwcDetail" data-url="{{ item.href }}" data-filename="{{ item.title }}">{{ item.title }}</text>
        </view>
    </view>
</jwc>