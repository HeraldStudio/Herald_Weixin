contact {
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

contact .hint {
    font-size: 28rpx;
    color: #666;
    line-height: 40rpx;
    display: block;
    padding: 5rpx 20rpx;
}

contact button {
    font-size: 28rpx;
    color: #3688ff;
    line-height: 40rpx;
    padding: 5rpx 20rpx;
    border: 2rpx solid #3688ff;
    background: #ffffff;
    border-radius: 40rpx !important;
    pointer-events: none;
    margin-left: 0;
    margin-right: 0;
}

contact button:after {
    border: none;
}