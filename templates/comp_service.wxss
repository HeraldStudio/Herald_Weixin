service .subtitle {
    padding: 20rpx 30rpx;
    background: #f4f4f4;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    position: sticky;
    top: 0;
    z-index: 999;
}

service .subtitle image {
    width: 42rpx;
    height: 42rpx;
  margin-right: 30rpx;
  flex-shrink: 0;
}

service .subtitle text {
    font-size: 28rpx;
    color: #666;
}

service .content {
  display: block;
  padding: 35rpx 30rpx;
  text-align: left;
  font-size: 28rpx;
  color: #555;
  background: #fcfcfc;
}

service.selectable:active .subtitle {
  background: #f0f0f0;
}

service.selectable:active .content {
  background: #f0f0f0;
}