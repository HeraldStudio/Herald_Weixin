.avatar-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 10rpx;
  margin: 25rpx;
  border-radius: 10rpx;
  box-shadow: 0 5rpx 30rpx rgba(0, 0, 0, .1);
}

.avatar-container .avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 30rpx;
  border-radius: 50%;
  background: rgba(0, 0, 0, .1)
}

.avatar-container .name {
  display: block;
  font-size: 34rpx;
  color: #333;
}

.avatar-container .identity {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-top: 5rpx;
}

.right-container {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.avatar-container .icon {
  width: 48rpx;
  height: 48rpx;
  margin: 30rpx;
}