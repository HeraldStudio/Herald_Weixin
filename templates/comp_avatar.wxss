.avatar-container {
  background: #00abd4;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx;
}

.avatar-container .name {
  display: block;
  font-size: 34rpx;
  color: #fff;
}

.avatar-container .identity {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, .7);
  margin-top: 15rpx;
}

.right-container {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}