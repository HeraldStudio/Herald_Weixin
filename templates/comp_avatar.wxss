.avatar-container {
  width: 100%;
  height: 450rpx;
  background: #00abd4;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-bottom: 20rpx;
}

.avatar-container .avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, .1)
}

.avatar-container .name {
  display: block;
  font-size: 32rpx;
  color: #fff;
  margin-top: 20rpx;
}

.avatar-container .identity {
  display: block;
  font-size: 26rpx;
  color: rgba(255, 255, 255, .7);
  margin-top: 8rpx;
}